# Production Environment Variables
# Copy this file to .env.production and fill in your actual values
# NEVER commit .env.production to git!

# JWT Authentication
JWT_PUBLIC_KEY="-----BEGIN PUBLIC KEY-----\n...\n-----END PUBLIC KEY-----"

# URL Signing Secret (generate with: openssl rand -hex 32)
SEGMENT_SECRET="your-64-character-hex-secret-here"

# Cloudflare Account
R2_ACCOUNT_ID="your-cloudflare-account-id"

# R2 API Keys (create at: Cloudflare Dashboard > R2 > Manage R2 API Tokens)
R2_ACCESS_KEY_ID="your-r2-access-key-id"
R2_SECRET_ACCESS_KEY="your-r2-secret-access-key"

# Optional: External Ad Decision API
AD_DECISION_API_URL="https://ad-server.example.com/api/v1/decision"
AD_DECISION_API_KEY="your-ad-server-api-key"

# Optional: VAST Ad Server
VAST_URL="https://ad-server.example.com/vast.xml"
